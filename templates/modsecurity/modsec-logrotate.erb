<%= @secauditlog %> {
    daily
    rotate 1
    compress
    missingok
    create 0644 root root
    notifempty
    sharedscripts
<% if scope.lookupvar('secauditlogstoragedir') != '' -%>
    prerotate
    	/usr/bin/perl /usr/bin/modsec-logconcat.pl > /dev/null 2>/dev/null || true
    endscript
<% end -%>
    postrotate
        /sbin/service httpd reload > /dev/null 2>/dev/null || true
    endscript
}